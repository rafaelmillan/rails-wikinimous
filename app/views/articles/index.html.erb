<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Wikhipster</a>
    </div>
  <%= link_to "New article", new_article_path, class: "btn btn-primary navbar-btn navbar-right" %>

  </div>
</nav>

<div class="list-group">
  <% @articles.each do |article| %>
  <a href="<%= article_path(article) %>" class="list-group-item">
    <h4 class="list-group-item-heading"><%= article.title %></h4>
    <p class="list-group-item-text"><%= Kramdown::Document.new(article.content.truncate(270)).to_html.html_safe %></p>
  </a>
  <% end %>
</div>
